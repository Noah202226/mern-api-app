{
  "version": 2,
  "buildCommand": "concurrently \"npm run build\" \"node backend/server.js\"",
  "installCommand": "npm install",
  "public": true,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/node" }
  ],
  "routes": [{ "src": "/api/goals", "dest": "/backend/server.js" }]
}
